---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  canonicalUrl?: string;
  type?: "website" | "article";
  publishedAt?: Date;
  updatedAt?: Date;
}

const props = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead {...props} />
    <!-- Dark mode: prevent flash by setting class before render -->
    <script is:inline>
      (function () {
        const theme = localStorage.getItem("theme");
        if (
          theme === "dark" ||
          (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>
  </head>
  <body
    class="min-h-screen bg-[var(--color-bg)] text-[var(--color-text)] flex flex-col"
  >
    <a href="#main-content" class="skip-link">Skip to content</a>
    <Header />
    <main id="main-content" class="flex-1 w-full max-w-4xl mx-auto px-4 py-8">
      <slot />
    </main>
    <Footer />

    <!-- JSON-LD Structured Data -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebSite",
        name: "Adrien Brault",
        url: "https://adrien.brage.fr",
        author: {
          "@type": "Person",
          name: "Adrien Brault",
          url: "https://adrien.brage.fr/about",
          sameAs: [
            "https://github.com/adrienbrault",
            "https://twitter.com/AdrienBrault",
            "https://www.linkedin.com/in/adrienbrault",
          ],
        },
      })}
    />
  </body>
</html>
