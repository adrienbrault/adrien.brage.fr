---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Page Not Found" description="The page you're looking for doesn't exist.">
  <div class="text-center py-16">
    <h1 class="text-6xl font-bold mb-4">404</h1>
    <p class="text-xl text-[var(--color-text-muted)] mb-8">
      The page you're looking for doesn't exist.
    </p>
    <a
      href="/"
      class="inline-block px-4 py-2 bg-[var(--color-accent)] text-white rounded-md hover:opacity-90 transition-opacity"
    >
      Go home
    </a>
  </div>
</BaseLayout>
