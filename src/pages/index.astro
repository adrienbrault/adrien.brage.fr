---
import BaseLayout from "../layouts/BaseLayout.astro";
import PostCard from "../components/PostCard.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog", ({ data }) => !data.draft);
const recentPosts = posts
  .sort((a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf())
  .slice(0, 3);
---

<BaseLayout
  title="Adrien Brault"
  description="Engineer focused on simplicity, architecture, and shipping products that matter."
>
  <section class="py-8">
    <h1 class="text-4xl font-bold mb-4">Hey, I'm Adrien</h1>
    <p class="text-xl text-[var(--color-text-muted)] mb-8 max-w-2xl">
      Engineer who believes complexity is a cost that compounds.
      I care about architecture, product sense, and shipping things that matter.
    </p>
    <div class="flex gap-4">
      <a
        href="/about"
        class="inline-block px-4 py-2 bg-[var(--color-accent)] text-white rounded-md hover:opacity-90 transition-opacity"
      >
        About me
      </a>
      <a
        href="/blog"
        class="inline-block px-4 py-2 border border-[var(--color-border)] rounded-md hover:border-[var(--color-accent)] transition-colors"
      >
        Read the blog
      </a>
    </div>
  </section>

  {
    recentPosts.length > 0 && (
      <section class="py-8 border-t border-[var(--color-border)]">
        <h2 class="text-2xl font-semibold mb-6">Recent Posts</h2>
        <ul class="space-y-4">
          {recentPosts.map((post) => (
            <li>
              <PostCard
                id={post.id}
                title={post.data.title}
                description={post.data.description}
                publishedAt={post.data.publishedAt}
                variant="compact"
              />
            </li>
          ))}
        </ul>
        <a
          href="/blog"
          class="inline-block mt-6 text-[var(--color-accent)] hover:underline"
        >
          View all posts &rarr;
        </a>
      </section>
    )
  }
</BaseLayout>
