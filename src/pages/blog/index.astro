---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog", ({ data }) => !data.draft);
const sortedPosts = posts.sort(
  (a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf()
);

// Get all unique tags
const allTags = [...new Set(posts.flatMap((post) => post.data.tags))].sort();
---

<BaseLayout
  title="Blog"
  description="Technical writing on LLMs, Python, TypeScript, React, system design, home automation, and more."
>
  <h1 class="text-4xl font-bold mb-4">Blog</h1>
  <p class="text-lg text-[var(--color-text-muted)] mb-8">
    Technical writing on LLMs, Python, TypeScript, system design, and my
    hobbies.
  </p>

  {
    allTags.length > 0 && (
      <div class="mb-8 flex flex-wrap gap-2">
        {allTags.map((tag) => (
          <span class="px-3 py-1 text-sm bg-[var(--color-border)] rounded-full">
            {tag}
          </span>
        ))}
      </div>
    )
  }

  {
    sortedPosts.length === 0 ? (
      <p class="text-[var(--color-text-muted)]">
        No posts yet. Check back soon!
      </p>
    ) : (
      <ul class="space-y-6">
        {sortedPosts.map((post) => (
          <li>
            <a
              href={`/blog/${post.id}`}
              class="group block p-4 -mx-4 rounded-lg hover:bg-[var(--color-border)]/50 transition-colors"
            >
              <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-2">
                <h2 class="text-xl font-medium group-hover:text-[var(--color-accent)]">
                  {post.data.title}
                </h2>
                <time
                  datetime={post.data.publishedAt.toISOString()}
                  class="text-sm text-[var(--color-text-muted)] shrink-0"
                >
                  {post.data.publishedAt.toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "short",
                    day: "numeric",
                  })}
                </time>
              </div>
              <p class="text-[var(--color-text-muted)] mt-2">
                {post.data.description}
              </p>
              {post.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mt-3">
                  {post.data.tags.map((tag: string) => (
                    <span class="px-2 py-0.5 text-xs bg-[var(--color-border)] rounded">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </a>
          </li>
        ))}
      </ul>
    )
  }
</BaseLayout>
