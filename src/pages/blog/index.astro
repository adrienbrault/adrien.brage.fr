---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostCard from "../../components/PostCard.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog", ({ data }) => !data.draft);
const sortedPosts = posts.sort(
  (a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf()
);

// Get all unique tags
const allTags = [...new Set(posts.flatMap((post) => post.data.tags))].sort();
---

<BaseLayout
  title="Blog"
  description="Technical writing on LLMs, Python, TypeScript, React, system design, home automation, and more."
>
  <h1 class="text-4xl font-bold mb-4">Blog</h1>
  <p class="text-lg text-[var(--color-text-muted)] mb-8">
    Technical writing on LLMs, Python, TypeScript, system design, and my
    hobbies.
  </p>

  {
    allTags.length > 0 && (
      <div class="mb-8 flex flex-wrap gap-2">
        {allTags.map((tag) => (
          <span class="px-3 py-1 text-sm bg-[var(--color-border)] rounded-full">
            {tag}
          </span>
        ))}
      </div>
    )
  }

  {
    sortedPosts.length === 0 ? (
      <p class="text-[var(--color-text-muted)]">
        No posts yet. Check back soon!
      </p>
    ) : (
      <ul class="space-y-6">
        {sortedPosts.map((post) => (
          <li>
            <PostCard
              id={post.id}
              title={post.data.title}
              description={post.data.description}
              publishedAt={post.data.publishedAt}
              tags={post.data.tags}
            />
          </li>
        ))}
      </ul>
    )
  }
</BaseLayout>
