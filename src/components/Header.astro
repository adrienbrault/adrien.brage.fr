---
import ThemeToggle from "./ThemeToggle.astro";

const navLinks = [
  { href: "/about", label: "About" },
  { href: "/blog", label: "Blog" },
  { href: "/projects", label: "Projects" },
  { href: "/photos", label: "Photos" },
  { href: "/uses", label: "Uses" },
  { href: "/now", label: "Now" },
];

const currentPath = Astro.url.pathname;
---

<header class="w-full border-b border-[var(--color-border)]">
  <nav class="max-w-4xl mx-auto px-4 py-3">
    <div class="flex items-center justify-between">
      <a href="/" class="text-xl font-semibold hover:text-[var(--color-accent)] transition-colors">
        Adrien Brault
      </a>
      <ThemeToggle />
    </div>

    <ul class="flex flex-wrap gap-x-4 gap-y-1 mt-3 text-sm">
      {
        navLinks.map(({ href, label }) => (
          <li>
            <a
              href={href}
              class:list={[
                "hover:text-[var(--color-accent)] transition-colors",
                {
                  "text-[var(--color-accent)] font-medium":
                    currentPath === href ||
                    (href !== "/" && currentPath.startsWith(href)),
                },
              ]}
            >
              {label}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
